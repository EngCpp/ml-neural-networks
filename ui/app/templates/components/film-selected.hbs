<img src="{{domain}}/images/{{film.image}}" class="video-thumbnail" alt="thumbnail"><br>

<div>
  <div class="video-title">{{film.name}}</div>
  {{film.views}} views<br><br>
  {{#each film.categories as |cat|}}
    <i>{{cat.name}}</i><br>
  {{/each}}
  <br>
  <button class="back-button"
        onclick={{action "backButtonClick"}}>
    Back
  </button>
</div>
